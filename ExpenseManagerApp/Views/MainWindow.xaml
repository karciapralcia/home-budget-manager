<Window x:Class="ExpenseManagerApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="600">

    <Grid Margin="0">

        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="30*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Menu x:Name="menu" Grid.ColumnSpan="2" Margin="0,0,0,43" Grid.RowSpan="2">
            <MenuItem Header="_Add expense" Height="22" Command="{Binding OpenAddExpenseWindowCommand}">
            </MenuItem>
            <MenuItem Header="_Add income" Height="22" Command="{Binding OpenAddIncomeWindowCommand}" >
            </MenuItem>
            <MenuItem Header="Set" Height="22" Command="">
                <MenuItem Header="Expense Category" Command="{Binding OpenAddExpensesCategoryCommand}"></MenuItem>
                <MenuItem Header="Income Category" Command="{Binding OpenAddIncomeCategoryCommand}"></MenuItem>
            </MenuItem>
        </Menu>

        <TextBlock HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Expenses" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="20" Width="57"/>

       
        <TextBlock HorizontalAlignment="Left" Margin="92,0,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Total expenses this month:" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="20" Width="144"/>
        <TextBlock HorizontalAlignment="Left" Margin="236,0,0,0" Grid.Row="1" TextWrapping="Wrap" Text="{Binding TotalExpenses,StringFormat={}{0:0.00} zł}" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="20" Width="80"/>

        <Button Grid.Column="1" Content="Delete expense" HorizontalAlignment="Left" Margin="485,0,0,0" Grid.Row="1" VerticalAlignment="Center" Height="20" Width="90" Command="{Binding RemoveExpenseCommand}"/>

        <DataGrid Grid.Row="2" Grid.ColumnSpan="2" Margin="10,3,10,3" ItemsSource="{Binding Expenses}" SelectedItem="{Binding SelectedExpense, Mode=TwoWay}" AutoGenerateColumns="False" CanUserAddRows="False" EnableRowVirtualization="True" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Amount" Binding="{Binding Amount,StringFormat={}{0:0.00} zł}" Width="*"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*"/>
                <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat={}{0:dd.MM.yyyy}}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock HorizontalAlignment="Left" Margin="17,0,0,0" Grid.Row="3" TextWrapping="Wrap" Text="Incomes" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="20" Width="57"/>

        <TextBlock HorizontalAlignment="Left" Margin="92,0,0,0" Grid.Row="3" TextWrapping="Wrap" Text="Total incomes this month:" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="20" Width="144"/>
        <TextBlock HorizontalAlignment="Left" Margin="236,0,0,0" Grid.Row="3" TextWrapping="Wrap" Text="{Binding TotalIncomes,StringFormat={}{0:0.00} zł}" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="20" Width="80"/>

        <Button Grid.Column="1" Content="Delete income" HorizontalAlignment="Left" Margin="485,0,0,0" Grid.Row="3" VerticalAlignment="Center" Height="20" Width="90" Command="{Binding RemoveIncomeCommand}"/>

        <DataGrid Grid.Row="4" Grid.ColumnSpan="2" Margin="10,3,10,3" ItemsSource="{Binding Incomes}" SelectedItem="{Binding SelectedIncome, Mode=TwoWay}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Amount" Binding="{Binding Amount,StringFormat={}{0:0.00} zł}" Width="*"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*"/>
                <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat={}{0:dd.MM.yyyy}}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>



    </Grid>
</Window>
