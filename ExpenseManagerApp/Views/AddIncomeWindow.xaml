<Window x:Class="ExpenseManagerApp.Views.AddIncomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Income" Height="300" Width="300">
    <Grid Margin="0">

        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Label and TextBox for Description -->
        <TextBlock Text="Description:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="5" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Label and TextBox for Amount -->
        <TextBlock Text="Amount:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox  Grid.Row="1" Grid.Column="1" Margin="5" Text="{Binding Amount , UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Label and ComboBox for Category -->
        <TextBlock Text="Category:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <ComboBox  ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <!-- Label and DatePicker for Date -->
        <TextBlock Text="Date:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <DatePicker Grid.Row="3" Grid.Column="1" Margin="5" SelectedDate="{Binding SelectedDate}"/>

        <!-- Submit Button -->
        <Button Content="Add Income"  Grid.Row="4" Grid.ColumnSpan="2" 
               Margin="4" HorizontalAlignment="Center" Command="{Binding AddIncomeCommand}"/>

    </Grid>
</Window>
